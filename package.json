{
  "name": "section-bloc",
  "publisher": "apouuuuuuu",       
  "icon": "icon.png",
  "displayName": "Section Bloc",
  "description": "Add custom foldable code blocks using @section / @endsection tags",
  "version": "1.0.4",
  "engines": {
    "vscode": "^1.70.0"
  },
  "main": "./out/extension.js",
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -watch -p .",
    "vscode:prepublish": "npm run compile",
    "package": "vsce package"
  },
"activationEvents": [
  "onLanguage:python",
  "onLanguage:javascript",
  "onLanguage:typescript",
  "onLanguage:html",
  "onLanguage:css",
  "onLanguage:php",
  "onLanguage:cpp",
  "onLanguage:c",
  "onLanguage:java",
  "onLanguage:shellscript",
  "onLanguage:jsonc",
  "onLanguage:xml",
  "onLanguage:yaml",
  "onLanguage:markdown"
],
"contributes": {
  "commands": [
  {
    "command": "sectionBloc.insertSection",
    "title": "Section Bloc: Insert Section"
  }
],
  "languages": [
    { "id": "python" },
    { "id": "javascript" },
    { "id": "typescript" },
    { "id": "html" },
    { "id": "css" },
    { "id": "php" },
    { "id": "cpp" },
    { "id": "c" },
    { "id": "java" },
    { "id": "shellscript" },
    { "id": "jsonc" },
    { "id": "xml" },
    { "id": "yaml" },
    { "id": "markdown" }
  ],
  "configuration": {
    "title": "Section Bloc",
    "properties": {
      "sectionBloc.enableHighlight": {
        "type": "boolean",
        "default": true,
        "description": "Enable or disable highlighting of @section lines"
      },
      "sectionBloc.highlightBackground": {
        "type": "string",
        "default": "#173f30",
        "description": "Background color of @section lines"
      },
      "sectionBloc.highlightForeground": {
        "type": "string",
        "default": "#d0f5d0",
        "description": "Text color of @section lines"
      }
    }
  }
},
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Apouuuuuuu/Section-Bloc.git"
  },
  "keywords": [
    "folding",
    "section",
    "comment",
    "python",
    "javascript"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Apouuuuuuu/Section-Bloc/issues"
  },
  "homepage": "https://github.com/Apouuuuuuu/Section-Bloc#readme",
  "devDependencies": {
    "vscode": "^1.1.37",
    "@types/node": "^22.15.3",
    "typescript": "^5.8.3",
    "vsce": "^2.15.0"
  }
}
